<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        tools:context="com.minkiapps.balidemo.MainActivity">

    <Button
            android:id="@+id/btnStartTemplateZero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Navigation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:layout_marginTop="16dp"
            android:id="@+id/btnStartTemplateOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Food Order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStartTemplateZero" />

    <Button
            android:layout_marginTop="16dp"
            android:id="@+id/btnStartTemplateTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Steps Counter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStartTemplateOne" />

    <Button
            android:layout_marginTop="16dp"
            android:id="@+id/btnStopService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Foreground Service"
            app:layout_constraintTop_toBottomOf="@+id/btnStartTemplateTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>